<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    android:elevation="10dp"
    tools:context=".home.activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_pantryList_pantryImage_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/adapter_pantryList_pantryName_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/adapter_pantryList_pantryLocation_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="6pt" />

            <TextView
                android:id="@+id/adapter_pantryList_pantryFoodCount_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="6pt" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>