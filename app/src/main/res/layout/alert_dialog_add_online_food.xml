<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/food_amount_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Food Amount"
        android:textSize="12pt"
        android:gravity="center"/>
    <EditText
        android:id="@+id/online_food_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the text here"
        android:gravity="center"
        android:inputType="number"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/online_food_amount_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add To Pantry">
        </Button>
        <Button
            android:id="@+id/online_food_amount_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel">
        </Button>
    </LinearLayout>
</LinearLayout>