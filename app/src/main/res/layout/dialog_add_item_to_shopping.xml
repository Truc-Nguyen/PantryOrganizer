<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/removeFoodMessage_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/removeFoodMessage_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addItemName_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/removeFoodMessage_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Food Name"
            android:layout_gravity="center"
            android:textSize="8pt"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:id="@+id/addItemName_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:gravity="center"
            android:ems="5"
            android:background="@drawable/edit_text_border"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addItemQuantity_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/addItemName_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:layout_gravity="center"
            android:textSize="8pt"
            android:layout_marginHorizontal="20dp"/>

        <EditText
            android:id="@+id/addItemQuantity_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Qty"
            android:inputType="number"
            android:gravity="center"
            android:ems="5"
            android:background="@drawable/edit_text_border"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/addItemQuantity_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/removeItemCancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingVertical="15dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:background="@drawable/button_gray"/>

        <Button
            android:id="@+id/removeItemConfirm_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingVertical="15dp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:background="@drawable/button_green"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>