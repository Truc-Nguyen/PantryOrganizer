<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/logout_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/logout_message"
        android:textSize="10pt"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/logout_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/logoutYes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout_yes"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/logoutNo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout_no"
            android:layout_margin="20dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>